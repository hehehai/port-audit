#!/usr/bin/env sh
DIR=$(CDPATH= cd -- "$(dirname -- "$0")" && pwd)

if [ -x "$DIR/../dist/port" ]; then
  exec "$DIR/../dist/port" "$@"
fi

if command -v bun >/dev/null 2>&1; then
  exec bun "$DIR/../src/entry.ts" "$@"
fi

echo "port: missing compiled binary (dist/port) and bun runtime." >&2
exit 1
